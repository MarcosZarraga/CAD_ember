	  <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
	<![endif]-->

	<!-- start: Favicon -->
	<link rel="shortcut icon" href="img/1.png">
	<!-- end: Favicon -->
		

		<div class="container-fluid">
		<div class="row-fluid">
					
			<div class="row-fluid">
				<div class="login-box">
					<div class="icons">
					
					</div>
					<h2>Iniciar sesión</h2>
					<form class="form-horizontal" action="index.html" method="post">
						<fieldset>
							
							<div class="input-prepend" title="Nombre de Usuario">
								<span class="add-on"><i class="icon-user"></i></span>
								{{input class="input-large span10" name="username" id="username" type="text" placeholder="Usuario" value=email}}
							</div>
							<div class="clearfix"></div>

							<div class="input-prepend" title="Password">
								<span class="add-on"><i class="icon-lock"></i></span>
								{{input class="input-large span10" name="password" id="password" type="password" placeholder="Contraseña" value=password}}
							</div>
							{{!-- <div> --}}
								{{#power-select
									selected=selectedUnit
									options=unidades
									onchange=(action (mut selectedUnit))
									as |unit|
								}}
									{{unit.nombre}}									
								{{/power-select}}
							{{!-- </div> --}}
							<div class="clearfix"></div>
							
							<label class="remember" for="remember"><input type="checkbox" id="remember" />Recordar Credenciales</label>

							<div class="btn-group button-login">	
								
								<button type="submit" class="btn btn-primary" {{action 'iniciarSesion'}}>Ingresar</button>
							</div>
							<div class="clearfix"></div>
						</fieldset>
					</form>
					<hr>
					<h3>¿Olvidaste la Contraseña?</h3>
					<p>
						 <a href="#">Click aqui</a> para contactar al administrador.
					</p>	
				</div><!--/span-->
			</div><!--/row-->
			
				</div><!--/fluid-row-->
				
	</div><!--/.fluid-container-->

	<!-- start: JavaScript-->
