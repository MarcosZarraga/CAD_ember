{{outlet}}
<!-- start: Meta -->
	<meta charset="utf-8">
	<title>GUHA</title>
	<!-- end: Meta -->

	<!-- start: Mobile Specific -->
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<!-- end: Mobile Specific -->

	<!-- start: CSS -->
	<link id="bootstrap-style" href="css/bootstrap.css" rel="stylesheet">
	<link href="css/bootstrap-responsive.min.css" rel="stylesheet">
	<link id="base-style" href="css/style.css" rel="stylesheet">
	<link id="base-style-responsive" href="css/style-responsive.css" rel="stylesheet">
	<!-- end: CSS -->

	<!-- The HTML5 shim, for IE6-8 support of HTML5 elements -->
	<!--[if lt IE 9]>
	  <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
	<![endif]-->

	<!-- start: Favicon -->
	<link rel="shortcut icon" href="img/1.png">
	<!-- end: Favicon -->


		<!-- start: Header -->
	<div class="navbar">
		<div class="navbar-inner">
			<div class="container-fluid">
				<a class="btn btn-navbar" data-toggle="collapse" data-target=".top-nav.nav-collapse,.sidebar-nav.nav-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</a>
				<a class="brand" > <img alt="Administación de Unidad" src="img/1.png" /> <span>Administación de Unidad Habitacional</span></a>

				<!-- start: Header Menu -->
				<div class="btn-group pull-right" >
				{{#link-to "alertas"}}

					<a class="btn">
						<i class="icon-warning-sign"></i><span class="hidden-phone hidden-tablet"> Alertas</span>
						<span class="label label-important hidden-phone">{{model.length}}</span> <span class="label label-success hidden-phone"></span>
					</a>
					{{/link-to}}
					{{#link-to "encuestas"}}
					<a class="btn">
						<i class="icon-tasks"></i><span class="hidden-phone hidden-tablet"> Encuestas</span>
						<span class="label label-warning hidden-phone">
							{{#if currentUnit}}
								{{currentUnit.encuestas.length}}
							{{else}}
								0
							{{/if}}
							</span>
					</a>
					{{/link-to}}
					{{#link-to "solicitudes"}}
					<a class="btn">
						<i class="icon-envelope"></i><span class="hidden-phone hidden-tablet"> Solicitudes</span>
						<span class="label label-success hidden-phone">
							{{#if currentUnit}}
								{{currentUnit.solicitudes.length}}
							{{else}}
								0
							{{/if}}
						</span>
					</a>
					{{/link-to}}
					<!-- start: User Dropdown -->
					<a class="btn dropdown-toggle" data-toggle="dropdown">
						<i class="icon-user"></i><span class="hidden-phone hidden-tablet"> Perfil</span>
						<span class="caret"></span>
					</a>
					<ul class="dropdown-menu">
						<li><a>Ajustes</a></li>
						<li class="divider"></li>
						<li><a {{action 'signOut'}}>Cerrar Sesión</a></li>
					</ul>
					<!-- end: User Dropdown -->
				</div>
				<!-- end: Header Menu -->

			</div>
		</div>
	</div>


		<div class="container-fluid">
		<div class="row-fluid">

			<!-- start: Main Menu -->
		<!-- start: Main Menu -->
			<div class="span2 main-menu-span">
				<div class="nav-collapse sidebar-nav">
					<ul class="nav nav-tabs nav-stacked main-menu">
						<li class="nav-header hidden-tablet">Menú principal</li>
						<li>{{#link-to "inicio"}}<i class="icon-home"></i><span class="hidden-tablet">Resumen</span>{{/link-to}}</li>

						<li>{{#link-to "pagos"}}<i class=" icon-plus"></i><span class="hidden-tablet"> Pagos</span>{{/link-to}}</li>

						<li>{{#link-to "gastos"}}<i class=" icon-minus"></i><span class="hidden-tablet"> Gastos</span>{{/link-to}}</li>

						<li>{{#link-to "colonos"}}<i class="icon-align-justify"></i><span class="hidden-tablet"> Colonos</span>{{/link-to}}</li>

						<li>{{#link-to "calendario"}}<i class="icon-calendar"></i><span class="hidden-tablet"> Calendario</span>{{/link-to}}</li>

						<li>{{#link-to "encuestas"}}<i class="icon-check"></i><span class="hidden-tablet"> Encuestas</span>{{/link-to}}</li>

						<li>{{#link-to "solicitudes"}}<i class="icon-question-sign"></i><span class="hidden-tablet"> Solicitudes</span>{{/link-to}}</li>

						<li>{{#link-to "alertas"}}<i class="icon-exclamation-sign"></i><span class="hidden-tablet"> Alertas</span>{{/link-to}}</li>

						<li>{{#link-to "servicios"}}<i class="icon-user"></i><span class="hidden-tablet">Servicios</span>{{/link-to}}</li>
					</ul>
				</div><!--/.well -->
			</div><!--/span-->
			<!-- end: Main Menu -->


			<noscript>
				<div class="alert alert-block span10">
					<h4 class="alert-heading">Warning!</h4>
					<p>You need to have <a href="http://en.wikipedia.org/wiki/JavaScript" target="_blank">JavaScript</a> enabled to use this site.</p>
				</div>
			</noscript>
			<div class="row-fluid sortable">
				<div class="box span10">
					<div class="box-header">
						<h2><i class="icon-exclamation-sign"></i><span class="break"></span>Registro de Alertas</h2>

					</div>


					<div class="box-content ">
						{{#if model}}
						<table class="table table-bordered table-striped table-condensed">
							  <thead>
								  <tr>
									  <th>Colono que envió la alerta</th>
									  <th>Fecha de registro de la alerta</th>
									  <th>Motivo</th>
									  <th>Descripción</th>
										<th>Acciones</th>
								  </tr>
							  </thead>
							  <tbody>
									{{#each model as |alerta|}}
										<tr>
											<td>{{alerta.colono.nombre}} {{alerta.colono.apellidoPaterno}}</td>
											<td class="center">{{moment-format alerta.fecha 'DD/MM/YYYY	HH:mm' }}</td>
											<td class="center">{{alerta.titulo}}</td>
											<td>{{alerta.descripcion}}</td>
											<td class="center">
												<a class="btn btn-danger" {{action 'deleteAlerta' alerta}}>
													<i class="icon-trash icon-white"></i>
												</a>
											</td>
										</tr>
										{{/each}}

											<!-- <tr>
												<td>Marcos Zárraga</td>
												<td class="center">2012/02/01</td>
												<td class="center">Robo</td>
												<td>Pude observar a personas robando en la casa 301</td>

											</tr> -->
							  </tbody>
						 </table>
						 {{else}}
						 	<h5>Aún no se registran alertas.</h5>
						 {{/if}}
						 <!-- <div class="pagination pagination-centered">
						  <ul>
							<li><a href="#">Prev</a></li>
							<li class="active">
							  <a href="#">1</a>
							</li>
							<li><a href="#">2</a></li>
							<li><a href="#">3</a></li>
							<li><a href="#">4</a></li>
							<li><a href="#">Next</a></li>
						  </ul>
						</div>      -->
					</div>
				</div><!--/span-->
			</div><!--/row-->

					<!-- end: Content -->
			</div><!--/#content.span10-->
				<!-- </div><!/fluid-row-->
</div>

		<div class="clearfix"></div>
		<hr>
		<!-- start: JavaScript-->
		<script src="js/jquery-1.9.1.min.js"></script>
		<script src="js/jquery-migrate-1.0.0.min.js"></script>
		<script src="js/jquery-ui-1.10.0.custom.min.js"></script>
	<script src="js/bootstrap.js"></script>
