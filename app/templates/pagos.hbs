			<div class="row-fluid sortable">
				<div class="box span10">
					<div class="box-header">
						<h2><i class="icon-align-justify"></i><span class="break"></span>Registro de Pagos</h2>
						<div class="box-icon">
							<!-- {{input type="checkbox" name="newPago" checked=newPago}} -->
							<a  class="btn-setting" {{action 'addPago'}}><i class="icon-plus-sign"></i></a>
							<a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
						</div>
					</div>


							<div class="box-content ">
							{{#if model}}
								{{#unless addNewPago}}
								<table class="table table-bordered table-striped table-condensed">
							  	<thead>
								  	<tr>
									  	<th>Colono que realiza el pago</th>
									  	<th>Fecha de registro</th>
									  	<th>Monto</th>
									  	<th>Concepto</th>
								  	</tr>
							  	</thead>
							  	<tbody>
										{{#each model as |pago|}}
										{{#unless pago.isNew}}
											<tr>
												<td>{{pago.colono.nombre}} {{pago.colono.apellidoPaterno}}</td>
												<td class="center">
													{{moment-format pago.fecha 'DD/MM/YYYY	HH:mm' }}
												</td>
												<td class="center">
													${{pago.monto}}.00 MXN
												</td>
												<td class="center">
													{{pago.concepto}}
												</td>
											</tr>
										{{!-- {{else}} --}}
											{{!-- <tr>
												<td>Sin pagos registrados</td>
												<td class="center"></td>
												<td class="center"></td>
												<td class="center"></td>
											</tr> --}}
										{{/unless}}
								{{/each}}

							  </tbody>
						 		</table>
